@inherits LayoutComponentBase

<RadzenLayout Style="background-color: #F7FEEF;position: relative">
    <RadzenHeader Style="background-color: #608334;">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="Olivia Assistance" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" @bind-Expanded="@sidebarExpanded" style="position: absolute">
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="Patient" Icon="person" Path="patients" />
            <RadzenPanelMenuItem Text="Doctor" Icon="person_add" Path="doctors" />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody Style="padding: 0px;">
        @Body
    </RadzenBody>
    <RadzenFooter Style="background-color: #608334;padding: 0.5rem;">
        <RadzenStack AlignItems="AlignItems.End" JustifyContent="JustifyContent.Center" Gap="0">
            <RadzenText TextStyle="TextStyle.Caption" Text="Olivia Assistance ® 2024" Style="color: white;" />
        </RadzenStack>
    </RadzenFooter>
</RadzenLayout>

<RadzenComponents/>

@code {
    bool sidebarExpanded = false;
}